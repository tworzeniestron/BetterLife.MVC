@using BetterLife.Application.Conference.Commands.CreateConference;

@model CreateConferenceCommand

<h1>Create Conference</h1>

<hr />

<div class="row">   
    <div class="col-md-4"> 
        <form action="/Conference/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Type">Type</label>
                <input class="form-control" type="text" asp-for="Type">
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="DateOfMeetings">Date of Meeting</label>
                <input class="form-control" type="date-time" asp-for="DateOfMeetings">
                <span asp-validation-for="DateOfMeetings" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="TicketPrice">Ticket Price</label>
                <input class="form-control" type="text" asp-for="TicketPrice">
                <span asp-validation-for="TicketPrice" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Description">Description</label>
                <input class="form-control" type="text" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Country">Country</label>
                <input class="form-control" type="text" asp-for="Country">
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="City">City</label>
                <input class="form-control" type="text" asp-for="City">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Street">Street</label>
                <input class="form-control" type="text" asp-for="Street">
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group md-3">
                <label class="control-label" asp-for="PostalCode">Postal Code</label>
                <input class="form-control" type="text" asp-for="PostalCode">
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label" asp-for="EncodedType">Encoded Type</label>
                <input class="form-control" type="text" asp-for="EncodedType">
                <span asp-validation-for="EncodedType" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary btn-lg">
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}